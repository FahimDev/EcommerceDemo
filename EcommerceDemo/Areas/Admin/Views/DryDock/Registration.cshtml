@using EcommerceDemo.Models
@model AdminRegistration

@{
    ViewData["Title"] = "Admin Registration";
}
<!-- Right Panel -->

<div id="right-panel" class="right-panel">

    <div class="content mt-3">
        <div class="animated fadeIn">


            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header"><strong>Admin</strong><small> Register</small></div>
                        <div class="card-body card-block">
                            <form method="post" action="registrationForm" accept-charset="UTF-8">
                                <div class="form-group">
                                    <label for="name" class=" form-control-label">Full Name</label>
                                    <input type="text" value="" placeholder="Full Name" name="full_name" asp-for="full_name" class="form-control">
                                    <span asp-validation-for="full_name" class="text-danger"></span>
                                </div>
                                <label for="name" class=" form-control-label">User Role</label>
                                <div class="input-group mb-3">
                                    <select asp-for="role_id" class="custom-select">
                                        <option selected>Choose...</option>
                                        <option value="1">Admin</option>
                                    </select>
                                    <div class="input-group-append">
                                        <label class="input-group-text" for="inputGroupSelect02">Options</label>
                                    </div>
                                </div>
                                <span asp-validation-for="role_id" class="text-danger"></span>
                                <div class="form-group">
                                    <label for="contact" class=" form-control-label">Contact</label>
                                    <input type="number" value="" placeholder="Contact" name="contact" asp-for="contact" class="form-control">
                                </div>
                                <span asp-validation-for="contact" class="text-danger"></span>
                                <div class="form-group">
                                    <label for="email" class=" form-control-label">Email</label>
                                    <input type="email" value="" placeholder="Email" name="email" asp-for="email" class="form-control">
                                </div>
                                <span asp-validation-for="email" class="text-danger"></span>
                                <div class="form-group">
                                    <label for="location" class=" form-control-label">Location</label>
                                    <input type="text" value="" placeholder="Location" name="location" asp-for="location" class="form-control">
                                </div>
                                <span asp-validation-for="location" class="text-danger"></span>
                                <div class="form-group">
                                    <label for="nameName" class=" form-control-label">User Name</label>
                                    <input type="text" value="" placeholder="User Name" name="username" asp-for="username" class="form-control">
                                </div>
                                <span asp-validation-for="username" class="text-danger"></span>
                                <div class="form-group">
                                    <label for="password" class=" form-control-label">Password</label>
                                    <input type="password" value="" placeholder="Password" name="password" asp-for="password" class="form-control">
                                </div>
                                <span asp-validation-for="password" class="text-danger"></span>
                                <div class="form-group">
                                    <input asp-area="Admin" asp-controller="DryDock" asp-action="Registration" class="btn btn-success btn-lg btn-block" type="submit" value="Register">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3"></div>

            </div><!-- .animated -->
        </div><!-- .content -->
    </div><!-- /#right-panel -->
    <!-- Right Panel -->
</div>
<script src="~/adminAsset/vendors/jquery/dist/jquery.min.js"></script>
<script src="~/adminAsset/vendors/popper.js/dist/umd/popper.min.js"></script>
<script src="~/adminAsset/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/adminAsset/assets/js/main.js"></script>
