@using EcommerceDemo.Models;
@model AddNewProduct;
@{
    ViewData["Title"] = "Update Product";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#category').on('change', function () {
            //pickUnit
            //alert($(this).find('option:selected').attr('id'));
            let unit = $(this).find('option:selected').attr('id');
            $("#minOrderLebel").text("Minimum Order ("+unit+")");
        });
    });
</script>
<div id="right-panel" class="right-panel">

    <div class="content mt-3">
        <div class="animated fadeIn">


            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header"><strong>Update</strong><small> Product</small></div>
                        <form method="post" action="createProductForm" enctype="multipart/form-data" accept-charset="UTF-8">
                            <!--enctype="multipart/form-data"-->
                            <div class="card-body card-block">
                                <div class="card-body">
                                    <label for="company" class=" form-control-label">Select Product Category</label>
                                    <select name="category_id" id="category" asp-for="category_id" data-placeholder="Choose a Category..." class="standardSelect" tabindex="1">
                                        <option>Select Category</option>
                                        @foreach (var item in TempData["Category"] as IEnumerable<ProductCatagories>)
                                        {
                                            <option id="@item.unit" value="@item.id">@item.catagory_name</option>
                                        }

                                    </select>
                                </div>
                                <span asp-validation-for="category_id" class="text-danger"></span>
                                <!-- HERE WILL BE A DropDown List OF COMPANY ID-->

                                <div class="form-group"><label for="productName" class=" form-control-label">Product Name</label><input name="product_name" asp-for="product_name" type="text" id="product" value="@Model.product_name" placeholder="Enter your product name" class="form-control"></div>
                                <span asp-validation-for="product_name" class="text-danger"></span>
                                <div class="form-group"><label for="url" class=" form-control-label">Video URL</label><input name="video_url" asp-for="video_url" type="url" id="url" value="@Model.video_url" placeholder="DE1234567890" class="form-control"></div>
                                <span asp-validation-for="video_url" class="text-danger"></span>
                                <div class="row form-group">
                                    <div class="col col-md-12"><label for="description" class=" form-control-label">Product Description</label></div>
                                    <div class="col-12 col-md-12">
                                        <textarea name="product_description" asp-for="product_description" id="textarea-input" rows="4" placeholder="Content..." class="form-control">@Model.product_description</textarea>
                                        <span asp-validation-for="product_description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="packing" class=" form-control-label">Select Product Packing Type</label>
                                    <select name="packing_type" asp-for="packing_type" data-placeholder="Choose a packing type..." class="standardSelect" tabindex="1">
                                        <option value="Poly Bag">Ploy Bag</option>
                                        <option value="Paper Box">Paper Box</option>
                                        <option value="Crock">Crock</option>
                                        <option value="Plastic Container">Plastic Container</option>
                                        <option value="Aluminium Foil Box">Aluminium Foil Box</option>
                                        <option value="Bottle">Bottle</option>
                                    </select>
                                    <span asp-validation-for="packing_type" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="company" class=" form-control-label">Select Company</label>
                                    <select name="company_id" asp-for="company_id" data-placeholder="Choose a company..." class="standardSelect" tabindex="1">
                                        <option value="1">None</option>
                                    </select>
                                </div>
                                <div class="form-group"><label for="brand" class=" form-control-label">Product Brand</label><input name="product_brand" asp-for="product_brand" type="text" id="brand" value="@Model.product_brand" placeholder="Enter product's brand name" class="form-control"></div>
                                <span asp-validation-for="product_brand" class="text-danger"></span>
                                <div class="form-group"><label for="ingredients" class=" form-control-label">Product Ingredients</label><input name="product_material" asp-for="product_material" value="@Model.product_material" type="text" id="ingredients" placeholder="Enter your product ingredients" class="form-control"></div>
                                <span asp-validation-for="product_material" class="text-danger"></span>
                                <div class="form-group"><label for="color" class=" form-control-label">Product Color</label><input name="product_color" asp-for="product_color" value="@Model.product_color" type="text" id="color" placeholder="Enter product's color" class="form-control"></div>
                                <span asp-validation-for="product_color" class="text-danger"></span>
                                <div class="form-group"><label for="minimumOrder" id="minOrderLebel" class=" form-control-label">Minimum Order</label><input name="minimum_order" asp-for="minimum_order" value="@Model.minimum_order" type="number" id="order" placeholder="Minimim order" class="form-control"></div>
                                <span asp-validation-for="minimum_order" class="text-danger"></span>
                                <div class="form-group"><label for="priceOff" class=" form-control-label">Product Sale</label><input name="product_sell" asp-for="product_sell" value="@Model.product_sell" type="number" id="sale" placeholder="Sale %" class="form-control"></div>
                                <span asp-validation-for="product_price" class="text-danger"></span>
                                <div class="form-group">
                                    <label for="price" class=" form-control-label">Product Price</label>
                                    <input type="number" id="input3-group1" name="product_price" asp-for="product_price" placeholder="৳ 00.00" value="@Model.product_price" class="form-control">
                                    <div class="input-group-addon">BDT (<strong>৳</strong>)</div>
                                    <span asp-validation-for="product_price" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="displayImage" class=" form-control-label">Display Image</label>
                                    <input type="file" class="m-image" id="file-input" name="product_image">
                                    <input type="hidden" class="m-image" name="h_product_image" id="product_image" />
                                    <span asp-validation-for="h_product_image" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="displayImage" class=" form-control-label">Product Image One</label>
                                    <input type="file" class="m-image" id="file-input" name="image_one">
                                    <input type="hidden" name="h_image_one" id="image_one" />
                                    <span asp-validation-for="h_image_one" class="text-danger"></span>

                                    <label for="displayImage" class=" form-control-label">Product Image Two</label>
                                    <input type="file" class="m-image" id="file-input" name="image_two">
                                    <input type="hidden" name="h_image_two" id="image_two" />
                                    <span asp-validation-for="h_image_two" class="text-danger"></span>

                                    <label for="displayImage" class=" form-control-label">Product Image Three</label>
                                    <input type="file" class="m-image" id="file-input" name="image_three">
                                    <input type="hidden" name="h_image_three" id="image_three" />
                                    <span asp-validation-for="h_image_three" class="text-danger"></span>

                                    <label for="displayImage" class=" form-control-label">Product Image Four</label>
                                    <input type="file" class="m-image" id="file-input" name="image_four">
                                    <input type="hidden" name="h_image_four" id="image_four" />
                                    <span asp-validation-for="h_image_four" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@Model.prod_id" class="btn btn-success btn-lg btn-block" type="submit" value="Update">
                                </div>

                            </div>
                        </form>
                    </div>
                    <div class="col-lg-3"></div>

                </div><!-- .animated -->
            </div><!-- .content -->
        </div><!-- /#right-panel -->
        <!-- Right Panel -->
        <div class="modal fade" id="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Crop image</h5>
                        <button type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="img-container">
                            <div class="row">
                                <div class="col-md-8">
                                    <!--  default image where we will set the src via jquery-->
                                    <img id="image" />
                                </div>
                                <div class="col-md-4">
                                    <div class="preview"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button"
                                class="btn btn-secondary"
                                data-dismiss="modal">
                            Cancel
                        </button>
                        <button type="button" class="btn btn-primary" id="crop">
                            Crop
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.11/cropper.min.js"></script>
        <script>

            var bs_modal = $("#modal");
            var image = document.getElementById("image");
            var cropper, reader, file;

            var idName = "";

            $("body").on("change", ".m-image", function (e) {
                var files = e.target.files;
                console.log("------------>h_" + e.target.name)
                idName = e.target.name;
                var done = function (url) {
                    image.src = url;
                    bs_modal.modal("show");
                };

                if (files && files.length > 0) {
                    file = files[0];

                    if (URL) {
                        done(URL.createObjectURL(file));
                    } else if (FileReader) {
                        reader = new FileReader();
                        reader.onload = function (e) {
                            done(reader.result);
                        };
                        reader.readAsDataURL(file);
                    }
                }
            });

            bs_modal
                .on("shown.bs.modal", function () {
                    cropper = new Cropper(image, {
                        aspectRatio: 800 / 800,
                        viewMode: 3,
                        preview: ".preview",
                        dragMode: "none",
                        cropBoxResizable: false,
                    });
                })
                .on("hidden.bs.modal", function () {
                    cropper.destroy();
                    cropper = null;
                });

            $("#crop").click(function () {
                canvas = cropper.getCroppedCanvas({
                    width: 160,
                    height: 160,
                });
                console.log("------------>" + idName);
                canvas.toBlob(function (blob) {
                    url = URL.createObjectURL(blob);
                    var reader = new FileReader();
                    reader.readAsDataURL(blob);
                    reader.onloadend = function () {
                        var base64data = reader.result;

                        canvas = cropper.getCroppedCanvas({
                            width: 380,
                            height: 200,
                        });

                        canvas.toBlob(function (blob) {
                            url = URL.createObjectURL(blob);
                            var reader = new FileReader();
                            reader.readAsDataURL(blob);
                            reader.onloadend = function () {
                                var base64data = reader.result;
                                //let file = new File([base64data], "name.png");
                                $("#"+idName).val(base64data.toString());
                                //console.log($("#imageblob").val())
                                bs_modal.modal("hide");
                            };
                        });
                    };
                });
            });
        </script>
    }
