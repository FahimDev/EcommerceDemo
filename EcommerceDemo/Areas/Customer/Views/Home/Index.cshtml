@using EcommerceDemo.Models
@model CustomerHome

@{
    ViewData["Title"] = "Account Page";
    ViewData["Class"] = "index-template fastfood_1";
}

<section class="heading-content">
    <div class="heading-wrapper">
        <div class="container">
            <div class="row">
                <div class="page-heading-inner heading-group">
                    <div class="breadcrumb-group">
                        <h1 class="hidden">My Account</h1>
                        <div class="breadcrumb clearfix">
                            <span itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                                <a href="./index.html" title="Fast Food" itemprop="url"><span itemprop="title"><i class="fa fa-home"></i></span></a>
                            </span>
                            <span class="arrow-space"></span>
                            <span itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                                <a href="./account.html" title="My Account" itemprop="url"><span itemprop="title">My Account</span></a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="account-layout">
    <div class="account-wrapper">
        <div class="container">
            <div class="row">
                <div class="account-inner">
                    <div class="account-content">
                        <div class="account-info">
                            <div class="account-details col-sm-6">
                                <h3 class="details-title">ACCOUNT DETAILS</h3>
                                <div class="details-content">
                                    <div class="details-item name">
                                        <span class="title">Name:</span>
                                        <span class="content">@Model.custormerInfo.full_name</span>
                                    </div>
                                    <div class="details-item">
                                        <span class="title">E-mail:</span>
                                        <a class="content" href="@Model.custormerInfo.email">@Model.custormerInfo.email</a>
                                    </div>
                                    <div class="details-item">
                                        <span class="title">Your address:</span>
                                        <address class="content">@Model.custormerInfo.area , @Model.custormerInfo.city , @Model.custormerInfo.zip</address>
                                    </div>
                                    <div class="details-item">
                                        <span class="title">Your phone:</span>
                                        <a class="content" href="@Model.custormerInfo.contact">@Model.custormerInfo.contact</a>
                                    </div>
                                </div>
                            </div>
                            <div class="account-link col-sm-6">
                                <h3 class="link-title">My Account</h3>
                                <div class="link-content">
                                    <ul class="link-list">
                                        <li class="item">
                                            <a href="./index.html">Logout</a>
                                        </li>
                                        <li class="item">
                                            <a href="./addresses.html">Modify your address book entries</a>
                                        </li>
                                        <li class="item">
                                            <a href="./wish-list.html">Modify your wishlist</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="account-banner col-sm-6">
                                <a href=""><img src="./assets/images/370x130.png" alt=""></a>
                            </div>
                            <div class="account-banner col-sm-6">
                                <a href=""><img src="./assets/images/370x130.png" alt=""></a>
                            </div>
                        </div>
                        <div class="account-orders">
                            <div class="account-orders-inner">
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="order_number">Order</th>
                                            <th class="date">Date</th>
                                            <th class="fulfillment_status">Fulfillment Status</th>
                                            <th class="total">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in @Model.orders)
                                        {
                                        <tr>
                                            <td class="td-name"><a title="">@item.id</a></td>
                                            <td class="td-note"><span class="note">@item.created_at</span></td>
                                            <td class="td-unfulfilled"><span class="status_unfulfilled">Waiting For Payment</span></td>
                                            <td class="td-authorized"><span class="status_voided">@item.total_quantity</span></td>
                                            <td class="td-total">
                                                <span class="total"><span class="money" data-currency-bdt="৳@item.total_price">৳@item.total_price</span></span>
                                            </td>
                                        </tr>
                                        }          
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>